{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@assets/*": ["assets/*"],
      "@config/*": ["src/config/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@tests/*": ["src/tests/*"],
      "@screens/*": ["src/screens/*"],
      "@navigators/*": ["src/navigators/*"],
      "@loaders/*": ["src/loaders/*"]
    }
  }
}
